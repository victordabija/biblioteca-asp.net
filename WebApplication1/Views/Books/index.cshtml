@{
    ViewData["Title"] = "Books page";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Books
                    </h3>
                </div>

                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>PagesCount</th>
                            <th>EditYear</th>
                            <th>Actions</th>
                        </tr>
                        
                        <!-- Foreach book -->
                        @foreach (var book in Model)
                        {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.PagesCount</td>
                            <td>@book.EditYear</td>
                            <td>
                                <a asp-action="View" asp-route-id="@book.Id" class="btn btn-info">View</a>
                                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>