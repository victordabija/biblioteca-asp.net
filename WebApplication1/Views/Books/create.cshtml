@{
    ViewData["Title"] = "Books page";
}

@model Book

<h2>Edit Book</h2>

<div class="card">
    <div class="card-body">

        <form asp-action="Create" asp-controller="Books" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author">Author</label>
                        <input asp-for="Author" class="form-control"/>
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PagesCount">Pages</label>
                        <input asp-for="PagesCount" class="form-control"/>
                        <span asp-validation-for="PagesCount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EditYear">Edit Year</label>
                        <input asp-for="EditYear" class="form-control"/>
                        <span asp-validation-for="EditYear" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-success mt-3">Create</button>
        </form>
    </div>
</div>