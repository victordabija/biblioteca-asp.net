@{
    ViewData["Title"] = "Books page";
}

@model Book

<h2>View Book</h2>

<div class="card">
    <div class="card-body">

        <form asp-action="Edit" asp-controller="Books" method="post">
            <div class="form-group">
                <label asp-for="Id">Id</label>
                <input asp-for="Id" class="form-control" readonly/>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" readonly/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author">Author</label>
                        <input asp-for="Author" class="form-control" readonly/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PagesCount">Pages</label>
                        <input asp-for="PagesCount" class="form-control" readonly/>
                    </div>
                    <div class="form-group">
                        <label asp-for="EditYear">Edit Year</label>
                        <input asp-for="EditYear" class="form-control" readonly/>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </form>
    </div>
</div>